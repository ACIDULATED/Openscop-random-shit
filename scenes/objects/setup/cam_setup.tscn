script/source = "extends Node2D
var piece_frame = 0
var tween_called = false
@export var called = false
const HUD_SPEED = 0.5

func _process(delta):
	piece_frame+=1
	if piece_frame>21:
		piece_frame=0
	
	if $counter_text.text!=str(Global.pieces_amount[Global.current_character]).pad_zeros(5):
		if !tween_called:
			create_tween().tween_property(self,\"position:y\",46.,HUD_SPEED).set_trans(Tween.TRANS_LINEAR)
			tween_called=true
		$counter_timer.start()
		$counter_text.text = str(Global.pieces_amount[Global.current_character]).pad_zeros(5)

func _on_counter_timer_timeout():
	create_tween().tween_property(self,\"position:y\",-18.,HUD_SPEED).set_trans(Tween.TRANS_LINEAR)
	called = false
	tween_called=false
"

